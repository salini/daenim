#ifndef ANIMTKVIEWERGUI_H
#define ANIMTKVIEWERGUI_H

#include <osgWidget/WindowManager>

class AnimtkViewerGUI: public osgWidget::WindowManager {
    	osg::ref_ptr<osgWidget::Box> _buttonBox;
    	osg::ref_ptr<osgWidget::Box> _listBox;
    	osg::ref_ptr<osgWidget::Box> _labelBox, _speedLabelBox, _timeLabelBox, _frameLabelBox;
	osg::ref_ptr<osgWidget::Box> _sliderBox, _sliderFrontBox, _speedBox, _speedFrontBox;
	osg::ref_ptr<osgWidget::NullWidget> _sliderCenter, _sliderLeft, _speedLeft, _speedCenter;

	osgWidget::Label* _speedLabel, *_timeLabel, *_frameLabel;
	
	float _sliderPos, _sliderPercent, _speedPos, _speedPercent;

protected:
	bool _hasAnim;
    osgWidget::Widget* _createButton(const std::string&);
    
    bool _buttonPush(osgWidget::Event&);
    bool _listMouseHover(osgWidget::Event&);
	
	void _setSliderTime(float time);
	void _setSliderPos(float pos);
	bool _sliderDown(osgWidget::Event& ev) ;
	bool _sliderDrag(osgWidget::Event& ev) ;
	bool _sliderUp(osgWidget::Event& ev) ;
	
	void _createSlider();
    void _createButtonBox();
    void _createListBox();
    void _createLabelBox();
	void _createSpeedBox();
	
	bool _speedDown(osgWidget::Event& ev);
	bool _speedDrag(osgWidget::Event& ev);
	bool _speedUp(osgWidget::Event& ev);
	void _setSpeedPos(float pos);

	int getSpeedSlot(void);
	void setSpeedSlot(int i);

	

public:
    AnimtkViewerGUI(osgViewer::View*, float, float, unsigned int, bool hasAnim);
	
	void accept(osg::NodeVisitor &nv);
};

#endif
